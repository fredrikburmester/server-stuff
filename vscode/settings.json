{
    "workbench.colorTheme": "Mayukai Semantic Mirage",
    "editor.fontFamily": "Dank Mono, Fira Code, Inconsolata",
    "editor.rulers": [140],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 140,
    "editor.inlineSuggest.enabled": true,
    "workbench.iconTheme": "vscode-icons",
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "security.workspace.trust.untrustedFiles": "open",
    "explorer.confirmDragAndDrop": false,
    "vsicons.dontShowNewVersionMessage": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.editor.splitInGroupLayout": "vertical",
    "editor.stickyScroll.enabled": true,
    "editor.formatOnSave": true,
    "react-native-tools.showUserTips": false,
    "editor.autoIndent": "full",
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "line",
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "terminal.integrated.fontFamily": "Dank Mono, Fira Code, Inconsolata",
    "terminal.integrated.fontSize": 16,
    "editor.fontSize": 16,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 30000,
    "search.showLineNumbers": true,
    "window.zoomLevel": -1,
    "terminal.integrated.env.osx": {},

    // Show hidden files
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/.DS_Store": false,
        "**/.ruby-lsp": false,
        
    },
    
    // Ruby ERB Formatting
    "emeraldwalk.runonsave": {
          "commands": [
              {
                "match": "\\.html.erb$",
                "cmd": "LC_ALL='en_US.UTF-8' htmlbeautifier \"${file}\""
              }
            ]
      },
    "rubyLsp.formatter": "rubocop",
    "rubyLsp.rubyVersionManager": "rvm",
    "[ruby]": {
      "editor.defaultFormatter": "Shopify.ruby-lsp", // Use the Ruby LSP as the default formatter
      "editor.formatOnSave": true, // Format files automatically when saving
      "editor.tabSize": 2, // Use 2 spaces for indentation
      "editor.insertSpaces": true, // Use spaces and not tabs for indentantion
      "editor.semanticHighlighting.enabled": true, // Enable semantic highlighting
      "editor.formatOnType": true, // Enable formatting while typing
    }
  }